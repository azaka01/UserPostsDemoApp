<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_padding_size_medium"
    android:layout_marginEnd="@dimen/margin_padding_size_medium"
    android:layout_marginTop="@dimen/margin_padding_size_small"
    android:elevation="@dimen/cardview_default_elevation">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_padding_size_medium"
        tools:layout_marginTop="@dimen/margin_padding_size_medium">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/postDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_marginTop="@dimen/margin_padding_size_tiny"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/postComments"
            tools:text="id labore ex et quam laborum"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/postComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_marginTop="@dimen/margin_padding_size_small"
            app:layout_constraintStart_toStartOf="@+id/postDescription"
            app:layout_constraintTop_toBottomOf="@+id/postDescription"
            tools:text="laudantium enim quasi est quidem magnam voluptate ipsam eos\ntempora quo necessitatibus\ndolor quam autem quasi\nreiciendis et nam sapiente accusantium"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/postAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_marginTop="@dimen/margin_padding_size_medium"
            android:layout_marginBottom="@dimen/margin_padding_size_tiny"
            app:layout_constraintStart_toStartOf="@+id/postDescription"
            app:layout_constraintTop_toBottomOf="@+id/postComments"
            tools:text="Eliseo@gardner.biz"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>